@model IEnumerable<MENDESHOP.Models.Product>
@{
 

 
        ViewBag.Title = "Index";
        Layout = "~/Areas/Admin/Views/Shared/AdminLayout.cshtml";
 
    <link href="~/Content/dmnut.css" rel="stylesheet" />
}

<div style="margin: 10px auto; width: 100%;">
    <div style="margin-left: 500px">
        <h2>THÔNG TIN PRODUCTS</h2>
        <p style="margin-left: -315px">
            @Html.ActionLink("TẠO MỚI", "Create", null, new
       {
           @class = "button-39"
       })
        </p>
    </div>

    <table class="table" style="position: absolute; left: 28%; width: 1000px">
        <tr>
            <th>
                TÊN SẢN PHẨM
            </th>
            <th>
                GIÁ
            </th>
            <th>
                HÌNH
            </th>
            <th>
                CATEGORY
            </th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.ProName)
                </td>

                <td style=" width: 180px;">
                    <p>@Html.DisplayFor(modelItem => item.ProPrice)0</p>
                </td>
                <td style=" width: 180px;">
                    <img src="~/images/@Html.DisplayFor(modelItem => item.ProImage)" style=" width: 20%;"/>
                   
                </td>
                <td>
                    @Html.ActionLink("Sửa", "Edit", new { id = item.ProId }, new { @class = "button-39 " })
                    @Html.ActionLink("Chi tiết", "Details", new { id = item.ProId }, new { @class = " button-39" })
                    @Html.ActionLink("Xóa", "Delete", new { id = item.ProId }, new { @class = "button-39 " })
                </td>
            </tr>
        }
    </table>
</div>

