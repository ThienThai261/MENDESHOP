@model MENDESHOP.Models.Category
@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/AdminLayout.cshtml";
    <link href="~/Content/dmnut.css" rel="stylesheet" />
}
<link href="~/Content/button.css" rel="stylesheet" />
<div style="margin: 10px auto; width: 70%; margin-top:50px ">
    <h2 style="text-align: center">CHỈNH SỬA CATEGORY</h2>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <div class="form-horizontal">
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.Id)
            <div class="form-group">
                MÃ CATEGORY
                <div class="col-lg-push-9">
                    @Html.EditorFor(model => model.Id, new
                    {
                   htmlAttributes = new { @class = "form-control", @readonly = "readonly" }
                   })
                    @Html.ValidationMessageFor(model => model.Id, "",
                   new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                TÊN CATEGORY
                <div class="col-lg-push-9">
                    @Html.EditorFor(model => model.CatName, new
                    {
                   htmlAttributes = new { @class = "form-control" }
                    })
                    @Html.ValidationMessageFor(model => model.CatName, "",
                   new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group" style="margin-left:700px">
                <div>
                    <input class="button-39 " type="submit" value="LƯU" />
                </div>
            </div>
        </div>
    }
    <div style="margin-left:730px">
        @Html.ActionLink("TRỞ LẠI", "Index")
    </div>
</div>

