<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <link href="~/Content/dmnut.css" rel="stylesheet" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    <link href="~/Content/datpro.css" rel="stylesheet" />
    <!-- Font Awesome Icons -->
    <link href="~/Content/all.min.css" rel="stylesheet" />
    <!-- IonIcons -->
    <link href="~/Content/ionicons.min.css" rel="stylesheet" />
    <link href="~/Content/adminlte.min.css" rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css" rel="stylesheet" />
</head>
<body class="hold-transition sidebar-mini">

    @{
        var admin = Session["admin"] as MENDESHOP.Models.Administrator;

    }
    <!-- Main Sidebar Container -->
    <aside class="main-sidebar sidebar-dark-primary elevation-4 " style="position: fixed;">
        <!-- Brand Logo -->
        <a href="index3.html" class="brand-link">

            <img src="~/images/avataAdmin.jpg" class="brand-image img-circle elevation-3" style="opacity: .8" />
            <span class="brand-text font-weight-light">ADMIN PAGE</span>
        </a>
        <div class="sidebar">
            <!-- Sidebar user panel (optional) -->
            <div class="user-panel mt-3 pb-3 mb-3 d-flex">
                <div class="info">
                    <a href="#" class="d-block">Xin chào: @admin.RollName </a>
                </div>
            </div>
            <!-- Sidebar Menu -->
            <nav class="mt-2">
                <ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu" data-accordion="false">
                    <!-- Add icons to the links using the .nav-icon class
                    with font-awesome or any other icon font library -->
                    <li class="nav-item menu-open">
                        <ul class="nav nav-treeview">
                            <li class="nav-item">
                                <a id="homeLink" href="/Admin/AdminUsers" class="nav-link">
                                    <p><i class="fa-solid fa-house" style="margin: 0 8px;"></i> Home</p>
                                </a>
                            </li>
                            <li class="nav-item">
                                <a id="productLink" href="/Admin/Product" class="nav-link">
                                    <i class="fa-solid fa-shirt" style="margin: 0 8px;"></i>
                                    <p>Product</p>
                                </a>
                            </li>
                            <li class="nav-item">
                                <a id="categoryLink" href="/Admin/Categories" class="nav-link">
                                    <i class="fa-solid fa-list" style="margin: 0 8px;"></i>
                                    <p>Category</p>
                                </a>
                            </li>
                        </ul>
                    </li>
                    <li class="nav-item">
                        <a href="#" class="nav-link">

                            <i class="fa fa-edit" style=" margin: 0 8px; "></i>
                            <p>
                                Quản Lý
                                <span class="right badge badge-danger">Coming Soon</span>
                            </p>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a href="/Admin/AdminUsers/Setting" class="nav-link">
                            <i class="fa-solid fa-circle-user" style=" margin: 0 8px; "></i>
                            <p>
                                Cài đặt
                            </p>
                        </a>
                    </li>
                    <li class="nav-item" style="margin-top: 250px; background: #ff0000; color: #01010f">
                        <a href="/User/Login" class="nav-link">
                            <i class="nav-icon fas fa-chart-pie"></i>
                            <p style="color: #ffffff">
                                Đăng Xuất
                            </p>
                        </a>
                    </li>
                </ul>
            </nav>
        </div>
    </aside>
    <div class="container body-content">
        @RenderBody()
        
    </div>
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            var productLink = document.getElementById("productLink");
            var currentUrl = window.location.pathname;
            if (currentUrl === "/Admin/Product") {
                productLink.classList.add("active");
            }
        });
    </script>
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            var productLink = document.getElementById("homeLink");
            var currentUrl = window.location.pathname;
            if (currentUrl === "/Admin/AdminUsers") {
                productLink.classList.add("active");
            }
        });
    </script>
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            var productLink = document.getElementById("categoryLink");
            var currentUrl = window.location.pathname;
            if (currentUrl === "/Admin/Categories") {
                productLink.classList.add("active");
            }
        });
    </script>
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            var productLink = document.getElementById("QlLink");
            var currentUrl = window.location.pathname;
            if (currentUrl === "##") {
                productLink.classList.add("active");
            }
        });
    </script>
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            var productLink = document.getElementById("settingLink");
            var currentUrl = window.location.pathname;
            if (currentUrl === "/Admin/AdminUsers/Setting") {
                productLink.classList.add("active");
            }
        });
    </script>
</body>
</html>
