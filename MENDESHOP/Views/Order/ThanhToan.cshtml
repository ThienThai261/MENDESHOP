        @Html.LabelFor(model => model.CustomerName)
        @Html.TextBoxFor(model => model.CustomerName)
    </div>
    <div>
        @Html.LabelFor(model => model.CustomerPhone)
        @Html.TextBoxFor(model => model.CustomerPhone)
    </div>
    <div>
